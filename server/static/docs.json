    "tags": [
      {
        "name": "Restaurants",
        "description": "Everything about your Restaurants",
        "externalDocs": {
          "description": "Find out more",
          "url": "http://swagger.io"
        }
      },
      {
        "name": "Pizza",
        "description": "Access to Pizza data",
        "externalDocs": {
          "description": "Find out more about Restaurants",
